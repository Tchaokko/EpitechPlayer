<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WidgetImage.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="buttonFile" Click="loadFile" Content="Load File" HorizontalAlignment="Left" Margin="372,58,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.383,2.342"/>
        <TextBlock x:Name="fileName" HorizontalAlignment="Left" Margin="180,53,0,0" TextWrapping="Wrap" Text="File Name" VerticalAlignment="Top" Height="20" Width="130" RenderTransformOrigin="0.509,0.49"/>
        <MediaElement x:Name="myMedia" LoadedBehavior="Manual" HorizontalAlignment="Left" Height="166" Margin="0,73,0,0" VerticalAlignment="Top" Width="222"/>
        <StackPanel x:Name="buttonMedia" Margin="10,244,270.4,39.4" Orientation="Horizontal" RenderTransformOrigin="0.515,0.728">
            <Button x:Name="buttonPrev" Click="prevMedia" Content="Prev" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="buttonPlay" Click="playMedia" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72"/>
            <Button x:Name="buttonNext" Click="pauseMedia" Content="Pause" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>

        </StackPanel>

    </Grid>
</Window>
