<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WidgetImage.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Image x:Name="myImage" HorizontalAlignment="Left" Height="145" Margin="343,80,0,0" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="buttonFile" Click="loadFile" Content="Load File" HorizontalAlignment="Left" Margin="372,53,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.383,2.342"/>
        <TextBlock x:Name="fileName" HorizontalAlignment="Left" Margin="180,53,0,0" TextWrapping="Wrap" Text="File Name" VerticalAlignment="Top" Height="20" Width="130" RenderTransformOrigin="0.509,0.49"/>
        <MediaElement x:Name="myMedia" HorizontalAlignment="Left" Height="166" Margin="0,73,0,0" VerticalAlignment="Top" Width="222" LoadedBehavior="Manual"/>
        <StackPanel x:Name="buttonMedia" Margin="10,244,270.4,39.4" Orientation="Horizontal" RenderTransformOrigin="0.515,0.728">
            <Button x:Name="buttonPrev" Content="Prev" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="buttonPrev_MouseDown"/>
            <Button x:Name="buttonPlay" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Click="buttonPlay_MouseDown"/>
            <Button x:Name="buttonNext" Content="Pause" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="buttonNext_MouseDown"/>

        </StackPanel>

    </Grid>
</Window>
