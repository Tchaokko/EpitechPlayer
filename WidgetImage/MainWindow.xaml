<Window x:Class="WidgetImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="404" Width="864">
    <Grid>
        <Image x:Name="myImage" HorizontalAlignment="Left" Height="145" Margin="343,80,0,0" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="buttonFile" Click="loadFile" Content="Load File" HorizontalAlignment="Left" Margin="10,342,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.383,2.342"/>
        <TextBlock x:Name="fileName" HorizontalAlignment="Left" Margin="687,342,0,0" TextWrapping="Wrap" Text="File Name" VerticalAlignment="Top" Height="20" Width="130" RenderTransformOrigin="0.509,0.49"/>
        <MediaElement x:Name="myMedia" LoadedBehavior="Manual" HorizontalAlignment="Left" Height="309" Margin="89,12,0,0" VerticalAlignment="Top" Width="654"/>
        <StackPanel x:Name="buttonMedia" Margin="280,341,338,-2" Orientation="Horizontal" RenderTransformOrigin="0.515,0.728">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.393"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Button x:Name="buttonPrev" Click="prevMedia" Content="Prev" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="buttonPlay" Click="playMedia" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72"/>
            <Button x:Name="buttonNext" Click="pauseMedia" Content="Pause" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>

        </StackPanel>
        <Slider HorizontalAlignment="Left" Name="volumeSlider" Margin="757,66,0,0"  Minimum="0" Maximum="100" VerticalAlignment="Top" Width="89" ValueChanged="soundChanged"/>
        <Slider HorizontalAlignment="Left" Name="timeline" Margin="89,319,0,0" Minimum="0" Maximum="100" VerticalAlignment="Top" Width="654" ValueChanged="moveVideo"/>

    </Grid>
</Window>
