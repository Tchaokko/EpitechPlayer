<Window x:Class="WidgetImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Image x:Name="myImage" HorizontalAlignment="Left" Height="145" Margin="343,80,0,0" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="buttonFile" Click="loadFile" Content="Load File" HorizontalAlignment="Left" Margin="372,53,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.383,2.342"/>
        <TextBlock x:Name="fileName" HorizontalAlignment="Left" Margin="180,53,0,0" TextWrapping="Wrap" Text="File Name" VerticalAlignment="Top" Height="20" Width="130" RenderTransformOrigin="0.509,0.49"/>
        <MediaElement x:Name="myMedia" HorizontalAlignment="Left" Height="166" Margin="0,73,0,0" VerticalAlignment="Top" Width="222"/>
        <StackPanel x:Name="buttonMedia" Margin="10,244,270.4,39.4" Orientation="Horizontal" RenderTransformOrigin="0.515,0.728">
            <Button x:Name="buttonPrev" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" MouseDown="prevMedia"/>
            <Button x:Name="buttonPlay" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" MouseDown="playMedia"/>
            <Button x:Name="buttonNext" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" MouseDown="pauseMedia"/>

        </StackPanel>

    </Grid>
</Window>
